// or @import url(http://fonts.googleapis.com/css?family=Alef:400,700);
@font-face
	font-family 'Alef'
	font-weight bold
	font-style normal
	src url(https://oknesset.org/static/font/Alef-bold.eot)
	src url(https://oknesset.org/static/font/Alef-bold.eot?#iefix) format('embedded-opentype'), url(https://oknesset.org/static/font/Alef-bold.woff) format('woff'), url(https://oknesset.org/static/font/Alef-bold.ttf) format('truetype'), url(https://oknesset.org/static/font/Alef-bold.svg#alefbold) format('svg')
@font-face
	font-family 'Alef'
	font-weight normal
	font-style normal
	src url(https://oknesset.org/static/font/Alef-regular.eot)
	src url(https://oknesset.org/static/font/Alef-regular.eot?#iefix) format('embedded-opentype'), url(https://oknesset.org/static/font/Alef-regular.woff) format('woff'), url(https://oknesset.org/static/font/Alef-regular.ttf) format('truetype'), url(https://oknesset.org/static/font/Alef-regular.svg#alefregular) format('svg')

// Fix FontAwesome's messing up our line-height.
.fa
	font inherit
.fa::before
	font-family FontAwesome
	#categories-list &
		display block
		padding-left 0
