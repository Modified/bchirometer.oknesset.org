// Layouts and stuff.
a
	footer li &,
	header li &
		color inherit
body
	max-width 28em
	margin 4em auto
	background white
	color black
	font-family Alef,sans-serif
	overflow-y scroll //??? Replace with nicer, JS-based, scrollbar, eg: perfectscrollbar.js.
button
	background white
button
footer a
header a
.button
	display block
	margin 0
	padding 1em
	vertical-align middle
	text-align center
	text-decoration inherit
	border none
	border-radius 0.3em
	outline none
	box-sizing border-box
	&.fa::before
		padding-left 0.5em
	#agendas-list &,
	#splash &
		display inline-block
	#splash>:not(footer) &
		background white
		color darkblueish
footer a
#categories-list a
#about .button
#qna .button
	background darkblueish
	color white
#categories-list a
	width 8em
	height 6em
	margin 0.3em
.button
	background white
	color black
footer
header
	position fixed
	right 0
	left 0
	text-align center
	width 100%
	height 3em
	background darkgrayish
	color white
footer
	bottom 0
	top inherit
	background darkblueish
	border-top solid medium white
h1
	font-size 3em
h1
h2
	margin 1rem auto
	text-align center
h3
	margin 2rem 0 0
h4
p
	margin 0.5em 0
	font-weight normal
	word-wrap break-word
header
	top 0
	ol
		margin 0
	a
		text-decoration inherit
img
	#parties-list &
		background gray //??? Temporary hack, because missing images.
		display block
		width 18em
		height 4em
		margin-right 3em //??? Yuck.
li
	display inline-block
	#parties-list &
		display block
ol
	header>&
		list-style none
	footer>&,
	section>&
		margin 0 auto
		padding 0
		text-align center
	&#parties-list //???
		text-align start
section
	display none
[disabled]
	background disabled
[hidden]
	display none
.agree
	border greenish solid medium
	&.selected
		background greenish
.disagree
	border redish solid medium
	&.selected
		background redish
.indifferent
	border yellowish solid medium
	&.selected
		background yellowish
.we-are
	background black
.splash
	background blueish
	color white
#agendas-list>li
	width 100%
	text-align start
#parties-list span
	display inline-block
	width 3em
#splash
	text-align center

// Fonts.
