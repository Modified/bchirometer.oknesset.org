// Color palette.
blueish=mediumslateblue
darkblueish=darkslateblue
darkgrayish=darkslategray
grayish=gray
greenish=green
redish=tomato
yellowish=gold
// Layouts and stuff.
body
	max-width 30em
	margin 4em auto
	background white
	color black
	font-family Alef,sans-serif
	overflow-y scroll //??? Replace with nicer, JS-based, scrollbar, eg: perfectscrollbar.js.
button
footer a
.button
	display inline-block
	margin 0
	padding 1em
	vertical-align middle
	text-align center
	text-decoration inherit
	border none
	outline none
	box-sizing border-box
	background white
	color black
	#splash &
		background white
		color darkblueish
	#categories-list &
		width 8em
		height 6em
		margin 0.5em
		background darkblueish
		color white
footer
header
	position fixed
	right 0
	left 0
	text-align center
	width 100%
	height 3em
	background darkgrayish
	color white
	a
		padding 1em
		color inherit
footer
	bottom 0
	top inherit
	background darkblueish
h1
h2
	margin 1rem auto
	text-align center
h4
p
	margin 0.5em 0
	font-weight normal
	word-wrap break-word
header
	top 0
	ol
		margin 0
	a
		text-decoration inherit
ol
	header>&
		list-style none
	footer>&,
	section>&
		margin 0 auto
		padding 0
		text-align center
	>li
		display inline-block
section
	display none
[disabled]
	background grayish
.agree
	border greenish solid medium
	&.selected
		background greenish
.disagree
	border redish solid medium
	&.selected
		background redish
.indifferent
	border yellowish solid medium
	&.selected
		background yellowish
.splash
	background blueish
	color white
#agendas-list>li
	width 100%
	text-align start
#splash
	text-align center

